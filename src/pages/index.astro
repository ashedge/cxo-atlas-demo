---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'CXO Atlas — The real stuff about running a business',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">
      The real lessons of running a business <span class="text-accent dark:text-white">at every stage of growth</span>
    </Fragment>

    <Fragment slot="subtitle">
      Skip the fluff. Get practical guidance from experts who've actually built and scaled companies. Practical Advice, at each step on your journey to success.
    </Fragment>
    
    <Fragment slot="image">
      <div class="relative w-full max-w-4xl mx-auto mt-2">
        <div class="aspect-video">
          <iframe
            src="https://player.vimeo.com/video/1046467415?autoplay=1&loop=1&autopause=0&muted=0"
            width="100%"
            height="100%"
            frameborder="0"
            allow="autoplay; fullscreen; picture-in-picture"
            allowfullscreen
            loading="lazy"
            class="rounded-lg shadow-lg w-full h-full hover-lift"
          ></iframe>
        </div>
        <!-- CTA Buttons positioned below video -->
        <div class="flex flex-col sm:flex-row gap-3 justify-center items-center mt-4">
          <a
