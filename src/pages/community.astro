---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Community â€” CXO Atlas',
  description: 'Join monthly events with people who actually get it. Virtual roundtables and 1:1 coaching sessions with experienced operators.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Join Community',
        href: '/signup',
        icon: 'tabler:users',
      },
      { text: 'View Upcoming Events', href: '#events' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'CXO Atlas Community' }}
  >
    <Fragment slot="title">
      Monthly Events with People Who <span class="text-accent dark:text-white">Actually Get It</span>
    </Fragment>

    <Fragment slot="subtitle">
      Join conversations with other founders and operators who are dealing with similar challenges. Plus optional one-on-one coaching when you need someone to talk through a specific situation without judgment.
    </Fragment>
  </Hero>

  <!-- Events Section **************** -->
  
  <div class="px-6 py-16 md:py-24 bg-gray-50 dark:bg-gray-900" id="events">
    <div class="mx-auto max-w-6xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl mb-4">
          Upcoming Events
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Monthly 90-minute sessions focused on specific operational challenges
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Next Event -->
        <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg border-l-4 border-blue-600">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
            <span class="text-sm font-semibold text-green-600 dark:text-green-400">Next Event</span>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
            Managing Through Your First Economic Downturn
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Learn from operators who've navigated economic uncertainty and come out stronger. We'll cover cash flow management, team decisions, and maintaining morale during tough times.
          </p>
          <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-4">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            October 15, 2024
          </div>
          <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-6">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            2:00 PM - 3:30 PM EST
          </div>
          <button class="bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
            Register Now
          </button>
        </div>

        <!-- Past Events -->
        <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Recent Topics</h3>
          <div class="space-y-4">
            <div class="border-l-2 border-gray-200 dark:border-gray-700 pl-4">
              <h4 class="font-medium text-gray-900 dark:text-white">Hiring Your First Salesperson</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400">September 15, 2024</p>
            </div>
            <div class="border-l-2 border-gray-200 dark:border-gray-700 pl-4">
              <h4 class="font-medium text-gray-900 dark:text-white">Dealing with Difficult Customers</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400">August 18, 2024</p>
            </div>
            <div class="border-l-2 border-gray-200 dark:border-gray-700 pl-4">
              <h4 class="font-medium text-gray-900 dark:text-white">Co-founder Conflict Resolution</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400">July 21, 2024</p>
            </div>
            <div class="border-l-2 border-gray-200 dark:border-gray-700 pl-4">
              <h4 class="font-medium text-gray-900 dark:text-white">Cash Flow Management</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400">June 16, 2024</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 1:1 Coaching Section **************** -->

  <Content
    isReversed
    tagline="1:1 Coaching"
    title="Book time with experienced operators"
    items={[
      {
        title: 'Specific Situations',
        description: 'Get help with a particular challenge you\'re facing right now, not general advice.',
      },
      {
        title: 'Experienced Operators',
        description: 'Work with people who\'ve been in your shoes and made it through similar challenges.',
      },
      {
        title: 'No Judgment',
        description: 'A safe space to talk through difficult decisions without worrying about how it looks.',
      },
      {
        title: 'Quick Resolution',
        description: 'Most issues are resolved in 1-2 sessions, not months of ongoing coaching.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: '1:1 Coaching Session',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-4">$200/hour</h3>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-6">Typically resolved in 1-2 sessions</p>
      <div class="space-y-4">
        <div class="flex items-center text-gray-600 dark:text-gray-400">
          <svg class="w-5 h-5 mr-3 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          All virtual for now
        </div>
        <div class="flex items-center text-gray-600 dark:text-gray-400">
          <svg class="w-5 h-5 mr-3 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          Planning quarterly in-person meetups in 2025
        </div>
        <div class="flex items-center text-gray-600 dark:text-gray-400">
          <svg class="w-5 h-5 mr-3 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          Book directly through the platform
        </div>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Join Community',
        href: '/signup',
        icon: 'tabler:users',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to connect with operators&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">who get it?</span>
    </Fragment>

    <Fragment slot="subtitle">
      Join 2,500+ founders and operators who are sharing real experiences and helping each other navigate the challenges of building and scaling businesses.
    </Fragment>
  </CallToAction>
</Layout>
