---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Business Journey Articles - CXO Atlas',
  description: 'Practical guidance for every stage of your entrepreneurial journey. From initial idea to revenue optimization.',
  keywords: 'business journey, entrepreneurship, startup stages, business guidance, entrepreneurial journey',
  canonical: 'https://cxo-atlas.com/article'
};
---

<Layout metadata={metadata}>
  <Hero
    title="Your Business Journey"
    subtitle="Practical guidance for every stage of your entrepreneurial journey. From initial idea to revenue optimization."
    actions={[
      { text: 'Back to Home', href: '/', variant: 'primary' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Business Journey Articles' }}
  />

  <Content
    id="articles-content"
    classes={{ container: 'py-10 md:py-14' }}
    bg="light"
  >
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          Choose Your Stage
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Click on any stage to get specific guidance for where you are in your entrepreneurial journey.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Stage 1 -->
        <a href="/article/thinking-of-starting" class="group block">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl p-6 transition-all duration-300 hover:-translate-y-2 border border-gray-200 dark:border-gray-700">
            <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center font-bold text-white text-lg mb-4 group-hover:scale-110 transition-transform duration-300">
              1
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Thinking of Starting</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">Initial business idea exploration</p>
            <div class="flex items-center text-blue-600 dark:text-blue-400 text-sm font-medium">
              <span>View Articles</span>
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>

        <!-- Stage 2 -->
        <a href="/article/committed-to-starting" class="group block">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl p-6 transition-all duration-300 hover:-translate-y-2 border border-gray-200 dark:border-gray-700">
            <div class="w-12 h-12 bg-green-600 rounded-full flex items-center justify-center font-bold text-white text-lg mb-4 group-hover:scale-110 transition-transform duration-300">
              2
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Committed to Starting</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">Making the decision to pursue</p>
            <div class="flex items-center text-green-600 dark:text-green-400 text-sm font-medium">
              <span>View Articles</span>
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>

        <!-- Stage 3 -->
        <a href="/article/working-full-time" class="group block">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl p-6 transition-all duration-300 hover:-translate-y-2 border border-gray-200 dark:border-gray-700">
            <div class="w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center font-bold text-white text-lg mb-4 group-hover:scale-110 transition-transform duration-300">
              3
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Working Full-Time</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">Dedicated business focus</p>
            <div class="flex items-center text-purple-600 dark:text-purple-400 text-sm font-medium">
              <span>View Articles</span>
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>

        <!-- Stage 4 -->
        <a href="/article/demo-product-service" class="group block">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl p-6 transition-all duration-300 hover:-translate-y-2 border border-gray-200 dark:border-gray-700">
            <div class="w-12 h-12 bg-orange-600 rounded-full flex items-center justify-center font-bold text-white text-lg mb-4 group-hover:scale-110 transition-transform duration-300">
              4
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Demo Product or Service</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">First version ready for testing</p>
            <div class="flex items-center text-orange-600 dark:text-orange-400 text-sm font-medium">
              <span>View Articles</span>
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>

        <!-- Stage 5 -->
        <a href="/article/has-some-customers" class="group block">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl p-6 transition-all duration-300 hover:-translate-y-2 border border-gray-200 dark:border-gray-700">
            <div class="w-12 h-12 bg-red-600 rounded-full flex items-center justify-center font-bold text-white text-lg mb-4 group-hover:scale-110 transition-transform duration-300">
              5
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Has Some Customers</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">Early customer validation</p>
            <div class="flex items-center text-red-600 dark:text-red-400 text-sm font-medium">
              <span>View Articles</span>
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>

        <!-- Stage 6 -->
        <a href="/article/needs-to-raise-money" class="group block">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl p-6 transition-all duration-300 hover:-translate-y-2 border border-gray-200 dark:border-gray-700">
            <div class="w-12 h-12 bg-indigo-600 rounded-full flex items-center justify-center font-bold text-white text-lg mb-4 group-hover:scale-110 transition-transform duration-300">
              6
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Needs to Raise Money</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">Funding for growth</p>
            <div class="flex items-center text-indigo-600 dark:text-indigo-400 text-sm font-medium">
              <span>View Articles</span>
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>

        <!-- Stage 7 -->
        <a href="/article/ready-to-expand" class="group block">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl p-6 transition-all duration-300 hover:-translate-y-2 border border-gray-200 dark:border-gray-700">
            <div class="w-12 h-12 bg-pink-600 rounded-full flex items-center justify-center font-bold text-white text-lg mb-4 group-hover:scale-110 transition-transform duration-300">
              7
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Ready to Expand</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">Scaling operations</p>
            <div class="flex items-center text-pink-600 dark:text-pink-400 text-sm font-medium">
              <span>View Articles</span>
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>

        <!-- Stage 8 -->
        <a href="/article/operational-issues" class="group block">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl p-6 transition-all duration-300 hover:-translate-y-2 border border-gray-200 dark:border-gray-700">
            <div class="w-12 h-12 bg-yellow-600 rounded-full flex items-center justify-center font-bold text-white text-lg mb-4 group-hover:scale-110 transition-transform duration-300">
              8
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Operational Issues</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">Managing complexity</p>
            <div class="flex items-center text-yellow-600 dark:text-yellow-400 text-sm font-medium">
              <span>View Articles</span>
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>

        <!-- Stage 9 -->
        <a href="/article/pursuing-revenue" class="group block">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl p-6 transition-all duration-300 hover:-translate-y-2 border border-gray-200 dark:border-gray-700">
            <div class="w-12 h-12 bg-teal-600 rounded-full flex items-center justify-center font-bold text-white text-lg mb-4 group-hover:scale-110 transition-transform duration-300">
              9
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Pursuing Revenue</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">Optimizing profitability</p>
            <div class="flex items-center text-teal-600 dark:text-teal-400 text-sm font-medium">
              <span>View Articles</span>
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>
      </div>
    </div>
  </Content>
</Layout>
